#Relational operators:<,>,<=,>=,==,!=
print(a<b)#True
print(a>b)
print(a<=b)
print(a>=b)
print(a==b)
print(a!=b)
True
False
True
False
False
True
#Logical operators: and ,or,not
#print(help("keywords"))
print(a<b and a>1)
print(a<b or a>1)
print(not a<b)
True
True
False
#Membership operators:in ,not in
list1=[12,23,34,45,56,67]
print(12 in list1)
print(120 in list1)
print(12  not in list1)
print(120 not  in list1)
True
False
False
True
#Conditional statements:if,else,elif
if a<b:
    print("a is less than b")
elif(a>b):
    print("a is greater than b")
else:
    print("a or equals to b")
a is less than b
#Question: Find the largest of three numbers
a=int(input("enter a value"))
b=int(input("enter b value"))
c=int(input("enter c value"))
if a<b and a>c:
    print("largest number is a:",a)
elif b>c:
    print("largest number is b:",b)
else:
    print("largest number is c:",c)
enter a value10
enter b value20
enter c value30
largest number is c: 30
#Loops:while,for
#print 1to n values
n=int(input("enter n value"))
i=1
while i<=n:
    print(i,end= " ")
    i += 1#i=i+1
